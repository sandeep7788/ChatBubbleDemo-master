        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/round_themed"
        android:elevation="10dp"
        app:srcCompat="@drawable/ic_close"
        tools:targetApi="lollipop" />

</RelativeLayout>
